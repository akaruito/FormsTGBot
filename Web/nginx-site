server {
    listen 80;
    server_name domain www.domain;

    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name domain www.domain;

    ssl_certificate /etc/ssl/domain/domain.crt;
    ssl_certificate_key /etc/ssl/domain/domain.key;
    # ssl_trusted_certificate /etc/ssl/domain/chain.pem;  # если есть

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    # ssl_dhparam /etc/ssl/certs/dhparam.pem;  # Если используете Diffie-Hellman параметры

    root /var/www/domain;
    index index.html index.htm;

    location / {
        try_files $uri $uri/ =404;
    }

    #Flask
    location /submit-form {
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /get-forms {
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /get-form/ {
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /toggle-viewed/ {
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /delete-form/ {
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
